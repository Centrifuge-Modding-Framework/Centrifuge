<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Centrifuge.Mod.SDK</id>
    <version>1.0.0-alpha</version>
    <description>SDK package for Unity Engine game mod development.</description>
    <authors>Ciastex</authors>
    <license type="file">LICENSE.md</license>
    <repository type="git" url="https://github.com/Ciastex/Centrifuge.git" branch="develop" />
    <projectUrl>https://github.com/Ciastex/Centrifuge</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <tags>game-modding unity-engine modding-sdk modding-framework modding-toolkit sdk</tags>
    <dependencies>
      <group targetFramework="net35">
        <dependency id="Lib.Harmony" version="1.2.0.1" />
        <dependency id="LitJSON" version="0.14.1" />
      </group>
    </dependencies>

    <releaseNotes>
This update makes Centrifuge a game-agnostic mod loader and API for mods or Game Support Libraries.
 If you want to support a game, find a proper Game Support Library, or interface with the game binaries themselves.
    </releaseNotes>
  </metadata>

  <files>
    <file src="./NuGetScripts/Init.ps1" target="tools/Init.ps1" />

    <file src="./mod.template.json" target="content/mod.json" />
    <file src="./Mod.template.cs" target="content/Mod.cs" />

    <file src="../LICENSE.md" target="" />
    
    <file src="../Reactor.API/bin/Release/Reactor.API.dll" target="lib/net35" />
  </files>
</package>